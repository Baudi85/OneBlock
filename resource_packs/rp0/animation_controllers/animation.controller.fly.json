{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.fly": {
            "initial_state": "default",
            "states": {
                "default":{
                    "transitions": [
                        {
                            "fly_phase": "!q.is_on_ground && q.modified_move_speed > 0.05 || q.modified_move_speed < 0.05"
                        }
                    ],
                    "blend_transition": 0.3,
                    "animations": [
                        "idle"
                    ]
                },
                "fly_phase":{
                    "transitions": [
                        {
                            "default": "q.modified_move_speed < 0.05 && q.is_on_ground"
                        }
                    ],
                    "blend_transition": 0.3,
                    "animations": [
                        "fly"
                    ]
                }
            }
        }
    }
}