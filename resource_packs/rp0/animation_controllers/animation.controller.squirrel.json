{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.squirrel": {
            "initial_state": "idle",
            "states": {
                "idle":{
                    "transitions": [
                        {
                            "walk": "q.modified_move_speed > 0.05 && !q.is_sitting"
                        },
                        {
                            "roll": "query.mark_variant == 1"
                        }
                    ],
                    "blend_transition": 0.3,
                    "animations": [
                        "sit"
                    ]
                },
                "roll":{
                    "transitions": [
                        {
                            "idle": "q.modified_move_speed < 0.05 && !q.is_sitting"
                        },
                        {
                            "walk": "q.modified_move_speed > 0.05"
                        }
                    ],
                    "blend_transition": 0.3,
                    "animations": [
                        "sick"
                    ]
                },
                "walk":{
                    "transitions": [
                        {
                            "idle": "q.modified_move_speed < 0.05 && !q.is_sitting"
                        },
                        {
                            "roll": "query.mark_variant == 1"
                        }
                    ],
                    "blend_transition": 0.3,
                    "animations": [
                        "walk"
                    ]
                }
            }
        }
    }
}