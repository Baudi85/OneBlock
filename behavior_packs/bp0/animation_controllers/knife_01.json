{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.knife_01_used": {
      "states": {
        "default": {
          "transitions": [
            { "knife_01_active": "(query.get_equipped_item_name == 'knife_01') && query.is_using_item" }
          ]
        },
		
        "knife_01_active": {
          "on_entry": [
            "/playsound v.knife_01 @a ~ ~ ~",
            "/particle ks:knife_01_particle ~ ~ ~",
            "/effect @s haste 23 2"

		  ],
          "transitions": [ { "default": "!query.is_using_item" } ]
		}
	  }
	}
  }
}