{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.hammer_03_used": {
      "states": {
        "default": {
          "transitions": [
            { "hammer_03_active": "(query.get_equipped_item_name == 'hammer_03') && query.is_using_item" }
          ]
        },
		
        "hammer_03_active": {
          "on_entry": [
            "/playsound v.hammer_03 @a ~ ~ ~",
            "/particle ks:hammer_03_particle ~ ~ ~",
            "/effect @s resistance 8 1"

		  ],
          "transitions": [ { "default": "!query.is_using_item" } ]
		}
	  }
	}
  }
}