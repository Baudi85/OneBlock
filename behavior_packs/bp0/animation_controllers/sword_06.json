{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.sword_06_used": {
      "states": {
        "default": {
          "transitions": [
            { "sword_06_active": "(query.get_equipped_item_name == 'sword_06') && query.is_using_item" }
          ]
        },
		
        "sword_06_active": {
          "on_entry": [
            "/playsound v.sword_06 @a ~ ~ ~",
            "/particle ks:sword_06_particle ~ ~ ~",
            "/effect @s absorption 15 1"

		  ],
          "transitions": [ { "default": "!query.is_using_item" } ]
		}
	  }
	}
  }
}