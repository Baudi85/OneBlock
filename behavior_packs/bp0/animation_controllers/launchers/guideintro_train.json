{
	"format_version" : "1.10.0",
	"animation_controllers" : {
		"controller.animation.guide.play_soundt" : {
			"initial_state" : "default",
			"states" : {
				"default" : {
					"on_entry" : [
						"/execute @s ~ ~ ~ playsound furniture.intro @a[tag=!intro,x=~,y=~,z=~,r=6] ~ ~ ~",
						"/execute @a[tag=!intro,x=~,y=~,z=~,r=6] ~ ~ ~ /function intro",
						"/execute @s ~ ~ ~ tag @a[x=~,y=~,z=~,r=6] add intro"
					],
					"transitions" : [
						{
							"loop" : "query.all_animations_finished"
						}
					]
				},
				"loop" : {
					"on_entry" : [
						"/execute @s ~ ~ ~ playsound train.intro @a[tag=!intro,x=~,y=~,z=~,r=6] ~ ~ ~",
						"/execute @a[tag=!intro,x=~,y=~,z=~,r=6] ~ ~ ~ /function intro_train",
						"/execute @s ~ ~ ~ tag @a[x=~,y=~,z=~,r=6] add intro"
					],
					"transitions" : [
						{
							"default" : "query.all_animations_finished"
						}
					]
				}
			}
		}
	}
}
