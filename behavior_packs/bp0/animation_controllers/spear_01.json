{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.spear_01_used": {
      "states": {
        "default": {
          "transitions": [
            { "spear_01_active": "(query.get_equipped_item_name == 'spear_01') && query.is_using_item" }
          ]
        },
		
        "spear_01_active": {
          "on_entry": [
            "/playsound v.spear_01 @a ~ ~ ~",
            "/particle ks:spear_01_particle ~ ~ ~",
            "/effect @s resistance 26 1"

		  ],
          "transitions": [ { "default": "!query.is_using_item" } ]
		}
	  }
	}
  }
}