{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.sword_05_used": {
      "states": {
        "default": {
          "transitions": [
            { "sword_05_active": "(query.get_equipped_item_name == 'sword_05') && query.is_using_item" }
          ]
        },
		
        "sword_05_active": {
          "on_entry": [
            "/playsound v.sword_05 @a ~ ~ ~",
            "/particle ks:sword_05_particle ~ ~ ~",
            "/effect @s strength 5 2",
            "/effect @s fire_resistance 9 2"

		  ],
          "transitions": [ { "default": "!query.is_using_item" } ]
		}
	  }
	}
  }
}