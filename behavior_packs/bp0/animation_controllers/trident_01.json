{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.trident_01_used": {
      "states": {
        "default": {
          "transitions": [
            { "trident_01_active": "(query.get_equipped_item_name == 'trident_01') && query.is_using_item" }
          ]
        },
		
        "trident_01_active": {
          "on_entry": [
            "/playsound v.trident_01 @a ~ ~ ~",
            "/particle ks:trident_01_particle ~ ~ ~",
            "/effect @s speed 5 3"

		  ],
          "transitions": [ { "default": "!query.is_using_item" } ]
		}
	  }
	}
  }
}