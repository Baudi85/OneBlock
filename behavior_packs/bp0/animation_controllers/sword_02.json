{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.sword_02_used": {
      "states": {
        "default": {
          "transitions": [
            { "sword_02_active": "(query.get_equipped_item_name == 'sword_02') && query.is_using_item" }
          ]
        },
		
        "sword_02_active": {
          "on_entry": [
            "/playsound v.sword_02 @a ~ ~ ~",
            "/particle ks:sword_02_particle ~ ~ ~",
            "/effect @s resistance 15 1"

		  ],
          "transitions": [ { "default": "!query.is_using_item" } ]
		}
	  }
	}
  }
}