{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.stray_scythe_used": {
      "states": {
        "default": {
          "transitions": [
            { "stray_scythe_active": "(query.get_equipped_item_name == 'stray_scythe') && query.is_using_item" }
          ]
        },
		
        "stray_scythe_active": {
          "on_entry": [
            "/playsound v.stray_scythe @a ~ ~ ~",
            "/particle ks:stray_scythe_particle ~ ~ ~",
            "/summon stray ~ ~ ~ minecraft:invocado_stray",
            "/summon stray ~ ~ ~ minecraft:invocado_stray",
            "/summon stray ~ ~ ~ minecraft:invocado_stray"

		  ],
          "transitions": [ { "default": "!query.is_using_item" } ]
		}
	  }
	}
  }
}